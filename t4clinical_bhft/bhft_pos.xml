<openerp>
    <data>
        
        <!-- Location - Point of Service - Hospital -->
        <record id="t4c_bhft_location_bhft" model="t4.clinical.location">
            <field name="name">BHFT POS Location</field>
            <field name="code">BHFT</field>
            <field name="type">pos</field>
            <field name="usage">hospital</field>
        </record>
        
        <!-- Location Lots -->
        <record id="t4c_bhft_pos_hospital" model="t4.clinical.pos">
            <field name="name">Burton Hospitals Foundation Trust</field>
            <field name="location_id" ref="t4c_bhft_location_bhft"/>
            <field name="company_id" ref="base.main_company"/>
        </record>
        <record id="t4c_bhft_location_lot_admission" model="t4.clinical.location">
            <field name="name">Admission Location</field>
            <field name="code">ADML-BHFT</field>
            <field name="type">structural</field>
            <field name="usage">room</field>
            <field name="parent_id" ref="t4c_bhft_location_bhft"/>
        </record>
        <record id="t4c_bhft_location_lot_discharge" model="t4.clinical.location">
            <field name="name">Discharge Location</field>
            <field name="code">DISL-BHFT</field>
            <field name="type">structural</field>
            <field name="usage">room</field>
            <field name="parent_id" ref="t4c_bhft_location_bhft"/>
        </record>      
        
        <!-- Point of Service - Hospital -->
        <record id="t4c_bhft_pos_hospital" model="t4.clinical.pos">
            <field name="name">Burton Hospitals Foundation Trust</field>
            <field name="location_id" ref="t4c_bhft_location_bhft"/>
            <field name="company_id" ref="base.main_company"/>
            <field name="lot_admission_id" ref="t4c_bhft_location_lot_admission"/>
            <field name="lot_discharge_id" ref="t4c_bhft_location_lot_discharge"/>
        </record>

    </data>
</openerp>