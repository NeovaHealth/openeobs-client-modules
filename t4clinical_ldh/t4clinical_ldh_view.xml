<openerp>
    <data>
         <!-- Activity Workload Kanban View -->
        <record model="ir.ui.view" id="view_ldh_activity_workload_kanban">
            <field name="name">t4.ldh.activity.workload.kanban</field>
            <field name="model">t4.ldh.activity.workload</field>
            <field name="arch" type="xml">
                <kanban default_group_by="activity_type" version="7.0" class="oe_background_grey"
                        edit="false" quick_create="false" create="false">
                    <field name="activity_type"/>
                    <field name="summary"/>
                    <field name="user_id"/>
                    <field name="user_ids"/>
                    <field name="patient_id"/>
                    <field name="location_id"/>
                    <field name="date_scheduled"/>
                    <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_card oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <div><b><field name="summary"/></b></div>
                                <div class="oe_kanban_footer_left" style="margin-top:5px;">
				                    <field name="user_id"/>
				                    <field name="patient_id"/>
				                    <field name="location_id"/>
				                    <field name="date_scheduled"/>
				                    <field name="activity_type"/>
                                </div>
                            </div>
                            <div class="oe_clear"></div>
                        </div>
                    </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_show_ldh_workload">
            <field name="name">Activity Workload</field>
            <field name="res_model">t4.ldh.activity.workload</field>
            <!--<field name="view_type">tree</field>-->
            <field name="view_mode">kanban</field>
            <field name="view_id" ref="view_ldh_activity_workload_kanban"/>
            <field name="domain">[['data_model','in',['t4.clinical.patient.placement','t4.clinical.ldh.patient.clerking','t4.clinical.ldh.patient.review']],['state','not in',['cancelled','completed']]]</field>
        </record>

        <menuitem name="Activity Workload"
                  parent="t4clinical_ui.menu_t4ui_left_patient"
                  id="menu_t4ldh_left_workload"
                  action="action_show_ldh_workload"
                  groups="t4clinical_base.group_t4clinical_ward_manager,t4clinical_base.group_t4clinical_dev,base.user_root"/>
        
        <record model="ir.ui.view" id="view_t4_clinical_ldh_clerking_tree">
            <field name="name">T4 Clinical LDH Clerking Tree View</field>
            <field name="model">t4.clinical.clerking</field>
            <field name="arch" type="xml">
                <tree string="T4 Clinical LDH Clerking Tree View" version="7.0" create="0">
                    <button name="complete" type="object" string="Complete" class="oe_highlight" t4_icon="down-caret-1"/>
                    <field name="location_id" />
                    <field name="patient_id" />
                    <field name="hospital_number" />
                    <field name="pos_id" />
                </tree>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_show_clerkings" >
            <field name="name">Patient Clerkings</field>
            <field name="res_model">t4.clinical.clerking</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_t4_clinical_ldh_clerking_tree"/>
        </record>
        
        <record model="ir.ui.view" id="view_t4_clinical_ldh_review_tree">
            <field name="name">T4 Clinical LDH Review Tree View</field>
            <field name="model">t4.clinical.review</field>
            <field name="arch" type="xml">
                <tree string="T4 Clinical LDH Review Tree View" version="7.0" create="0">
                    <button name="complete" type="object" string="Complete" class="oe_highlight" t4_icon="down-caret-1"/>
                    <field name="location_id" />
                    <field name="patient_id" />
                    <field name="hospital_number" />
                    <field name="pos_id" />
                </tree>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_show_reviews" >
            <field name="name">Patient Reviews</field>
            <field name="res_model">t4.clinical.review</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_t4_clinical_ldh_review_tree"/>
        </record>

        <menuitem name="Patient Clerkings"
                  id="menu_t4_ldh_left_clerking"
                  parent="t4clinical_ui.menu_t4ui_left_patient"
                  action="action_show_clerkings"
                  groups="t4clinical_base.group_t4clinical_hca,t4clinical_base.group_t4clinical_dev,base.user_root"/>

        <menuitem name="Patient Reviews"
                  id="menu_t4_ldh_left_review"
                  parent="t4clinical_ui.menu_t4ui_left_patient"
                  action="action_show_reviews"
                  groups="t4clinical_base.group_t4clinical_doctor,t4clinical_base.group_t4clinical_dev,base.user_root"/>

        <record model="ir.ui.view" id="view_patient_review_complete">
            <field name="name">Patient Review</field>
            <field name="model">t4.clinical.ldh.patient.review</field>
            <field name="arch" type="xml">
                <form string="Patient Review" version="7.0">
                   <label for="patient_id" string="Patient"/>
                   <field name="patient_id" readonly="1"/>
                   <field name="diagnosis_ids" required="True" widget="many2many_tags"/>
                   <button name="complete_ui" type="object" string="Confirm Review"/>
                </form>
            </field>
        </record>

    </data>
</openerp>